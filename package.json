    "cov": "nyc --reporter text --reporter html --reporter lcov --report-dir './artifacts/coverage' -x './src/**/*.specs.js' mocha --timeout 10000 './src/**/*.specs.js'",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dwmkerr/app-splash.git"
  },
  "keywords": [
    "cordvoa",
    "react-native",
    "splash",
    "app-splash",
    "resize"
  ],
