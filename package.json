  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dwmkerr/app-splash/issues"
  },
  "homepage": "https://github.com/dwmkerr/app-splash#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.16.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.2.0",
    "mocha": "^5.0.0",
    "nyc": "^11.0.1"
  },
  "dependencies": {
    "chalk": "^2.3.0",
    "command-exists": "^1.0.2",
    "commander": "^2.9.0",
    "imagemagick-cli": "^0.1.3",
    "mkdirp": "^0.5.1"
  }
